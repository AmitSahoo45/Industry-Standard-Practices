@model IEnumerable<DBReplication.Models.Order>

<h2>Orders (From Subscriber DB)</h2>

<p>
    <a asp-action="Create">Create New Order</a>
</p>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>ProductName</th>
            <th>Price</th>
            <th>CreatedAt</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.ProductName</td>
                <td>@order.Price</td>
                <td>@order.CreatedAt</td>
            </tr>
        }
    </tbody>
</table>
